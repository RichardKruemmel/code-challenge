<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Climate Action</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/climateactions" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="climateaction[name]" placeholder="Title">
                </div>
				<div class="input-group mb-3">
  				<input type="radio" name="climateaction[category]" value="Individual"> Individual
				<input type="radio" name="climateaction[category]" value="National"> National	
				<input type="radio" name="climateaction[category]" value="Global"> Global
  				
				</div>
                <div class="form-group">
                    <input class="form-control" type="text" name="climateaction[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="climateaction[description]" placeholder="description">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="climateaction[carbonreduction]" placeholder="carbonreduction">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="climateaction[source]" placeholder="source">
                </div>
                <div class="form-group">	
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/climateactions">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>