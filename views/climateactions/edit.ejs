<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Climate Action</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/climateactions/<%= climateaction._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="climateaction[name]" value="<%= climateaction.name %>">
                </div>
				<div class="input-group mb-3">
  				<input type="radio" name="climateaction[category]" value="Individual"> Individual
				<input type="radio" name="climateaction[category]" value="National"> National	
				<input type="radio" name="climateaction[category]" value="Global"> Global
  				
				</div>
                <div class="form-group">
                    <input class="form-control" type="text" name="climateaction[image]" value="<%= climateaction.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="climateaction[description]" value="<%= climateaction.description %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="climateaction[carbonreduction]" value="<%= climateaction.carbonreduction%>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="climateaction[source]" value="<%= climateaction.source %>">
                </div>
                <div class="form-group">	
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/climateactions/<% climateaction._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>